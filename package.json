{
  "name": "todo-tui",
  "version": "1.0.0",
  "description": "A beautiful terminal UI for managing tasks in Markdown files with vim-like navigation",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "todo": "dist/index.js"
  },
  "scripts": {
    "dev": "tsx src/index.tsx",
    "build": "rollup -c",
    "start": "node dist/index.js",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "todo",
    "tui",
    "terminal",
    "cli",
    "tasks",
    "task-manager",
    "markdown",
    "productivity",
    "terminal-app",
    "ink",
    "react",
    "vim",
    "todo-list",
    "task-list",
    "adhd"
  ],
  "author": "Felipe Chierice <felipe.chierice@hotmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/felipechierice/todo-tui.git"
  },
  "bugs": {
    "url": "https://github.com/felipechierice/todo-tui/issues"
  },
  "homepage": "https://github.com/felipechierice/todo-tui#readme",
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "dependencies": {
    "chalk": "^5.3.0",
    "chokidar": "^3.5.3",
    "ink": "^5.0.1",
    "ink-select-input": "^6.0.0",
    "ink-text-input": "^6.0.0",
    "react": "^18.2.0"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^25.0.7",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-typescript": "^11.1.6",
    "@types/node": "^20.10.5",
    "@types/react": "^18.2.45",
    "rollup": "^4.9.1",
    "tslib": "^2.6.2",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  }
}
